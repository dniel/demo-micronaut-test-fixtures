{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "ignoreTests": true,
  "packageRules": [
    {
      "matchManagers": [
        "gradle",
        "dockerfile"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "automerge": true,
      "automergeType": "pr"
    }
  ]
}
